{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run FastAPI app",
			"type": "shell",
			"command": "python -Xutf8 app.py",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Run FastAPI app (py)",
			"type": "shell",
			"command": "py -Xutf8 -m uvicorn app:app --host 127.0.0.1 --port 8000",
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Run Vite dev server",
			"type": "shell",
			"command": "npm.cmd",
			"args": [
				"run",
				"dev"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run UI (Vite)",
			"type": "shell",
			"command": "powershell.exe",
			"args": [
				"-NoProfile",
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"cd \"c:\\Users\\boima\\recepie organizer\\frontend\"; npm.cmd run dev"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		}
	]
}